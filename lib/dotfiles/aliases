# Subversion
alias up='svn up --ignore-externals'
# Common command aliases
alias vil='vi $_'
alias ls='ls -F'
alias la='ls -la'
alias resource='source ~/.zshrc'
alias ce='cd ~/src/vixploder; mvim'
alias la='ls -lah'
alias sgi='sudo gem install --no-ri'
alias restart='touch tmp/restart.txt'
alias kill_ruby='killall -9 ruby'
# Rails
alias r='rails'
alias ss='./script/server --debugger'
alias sas='./script/autospec'
alias sc='./script/console'
alias rc='rails console'
alias sg='./script/generate'
alias rg='rails generate'
alias rdb='rake db:migrate'
alias ld='tail -f log/development.log'
alias lt='tail -f log/test.log'

# MacVim terminal
alias vim='mvim -v'
alias view='mview -v'
alias vimdiff='mvimdiff -v'
alias vimex='mvimex -v'

# Autotest
alias autos='AUTOFEATURE=true autospec'

# Load ~/.local_aliases file if it exists & is readable
[ -r ~/.local_aliases ] && . ~/.local_aliases
